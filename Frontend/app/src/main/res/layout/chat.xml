<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#EFEFEF">

    <!-- Scrollable area for displaying chat messages -->
    <ScrollView
        android:id="@+id/chatScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/messageInputLayout"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tx1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="The conversation will appear here:\n"
            android:textSize="20sp"
            android:scrollbars="vertical" />
    </ScrollView>

    <!-- Message input and send button layout -->
    <LinearLayout
        android:id="@+id/messageInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <!-- EditText for typing messages -->
        <EditText
            android:id="@+id/msgEdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type a message"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000" />

        <!-- Send Button -->
        <Button
            android:id="@+id/sendBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Send"
            android:backgroundTint='@color/IsuRed'
            android:textColor="#FFFFFF"
            android:padding="12dp" />
    </LinearLayout>

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:backgroundTint='@color/IsuRed'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="Back" />

    <!-- New Button to navigate to ChatRoom1 -->
    <Button
        android:id="@+id/chatRoom1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint='@color/IsuRed'
        android:text="Room 1"
        android:textColor="#FFFFFF"
        android:padding="12dp"/>
    <Button
        android:id="@+id/chatRoom2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint='@color/IsuRed'
        android:text="Room 2"
        android:layout_marginLeft="98dp"

        android:textColor="#FFFFFF"
        android:padding="12dp"/>
    <Button
        android:id="@+id/chatRoom3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint='@color/IsuRed'
        android:text="Room 3"
        android:layout_marginLeft="195dp"


    android:layout_alignParentTop="true"
        android:textColor="#FFFFFF"
        android:padding="12dp"/>

</RelativeLayout>
