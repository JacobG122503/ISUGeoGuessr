<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- User Profile Button -->

    <!-- Logo Image -->

    <ImageButton
        android:id="@+id/user_profile_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="17dp"
        android:contentDescription="User Profile"
        android:scaleType="centerInside"
        android:src="@drawable/catsquare" />

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_below="@id/user_profile_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/campanile"
        android:contentDescription="App Logo"
        android:scaleType="fitCenter" />

    <!-- Play Button -->
    <Button
        android:id="@+id/play_button"
        style="@style/PlayButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_image"
        android:layout_margin="8dp"
        android:layout_marginTop="16dp"
        android:text="Play"
        android:textSize="18sp"
       />
  ]

    <!-- Multiplayer Button -->
    <Button
        android:id="@+id/multiplayer_button"
        style="@style/PlayButtonStyle"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/play_button"
        android:layout_marginTop="16dp"
        android:text="Multiplayer"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>

    <!-- Shop Button -->
    <Button
        android:id="@+id/shop_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/multiplayer_button"
        android:layout_marginTop="16dp"
        android:text="Shop"
        style="@style/PlayButtonStyle"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>

    <!-- Leader Board Button -->
    <Button
        android:id="@+id/leaderboard_button"
        style="@style/PlayButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_button"
        android:layout_margin="8dp"
        android:layout_marginTop="16dp"
        android:text="Leaderboard"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Explore Isu"
        android:textAlignment="center"
        android:textSize="75px" />

    <TextView
        android:id="@+id/gamesPlayed"
        android:layout_width="105dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="147dp"
        android:layout_marginLeft="147dp"
        android:layout_marginTop="446dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="208dp" />

    <TextView
        android:id="@+id/totalScore"
        android:layout_width="132dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="152dp"
        android:layout_marginEnd="142dp"
        android:layout_marginRight="142dp"
        android:layout_marginBottom="147dp" />

</RelativeLayout>
