<!-- res/drawable/button_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item android:right="-0dp" android:left="0dp" android:top="0dp" android:bottom="-2.5dp">
        <shape android:shape="rectangle">
            <solid android:color="#45020A" /> <!-- Semi-transparent black color for shadow -->
            <corners android:radius="30dp" /> <!-- Match the radius of the button shape -->
        </shape>
    </item>

    <!-- Original Button Shape Layer -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="30dp" />
            <gradient
                android:angle="-90"
                android:centerX="70%"
                android:centerColor="@color/IsuRed"
                android:startColor="@color/IsuRed"
                android:endColor="#950616"
                android:type="linear" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />

        </shape>
    </item>
</layer-list>
