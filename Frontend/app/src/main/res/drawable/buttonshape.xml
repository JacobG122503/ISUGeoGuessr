    <!-- Original Button Shape Layer -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="15dp" />
            <gradient
                android:angle="-90"
                android:centerColor="@color/IsuRed"
                android:centerX="70%"
                android:endColor="@color/IsuRed"
                android:startColor="@color/IsuRed"
                android:type="linear" />
            <!--android:endColor="#950616"-->
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

        </shape>
    </item>
</layer-list>
